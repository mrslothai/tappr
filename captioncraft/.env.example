# CaptionCraft Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# CLOUDFLARE R2 STORAGE
# ============================================
# Get these from: https://dash.cloudflare.com → R2 → Manage R2 API Tokens

R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=captioncraft

# Public URL for video downloads (optional, enables direct downloads)
# Enable at: R2 → Bucket → Settings → Public Access
R2_PUBLIC_URL=https://your-bucket-id.r2.dev

# ============================================
# SPEECH-TO-TEXT (AssemblyAI)
# ============================================
# Get your API key from: https://www.assemblyai.com/dashboard/signup
# Free tier: 185 hours of transcription!

ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Port for the backend server (Railway sets this automatically)
PORT=8080

# Maximum video file size in MB
MAX_VIDEO_SIZE_MB=100

# Hours to keep processed files before cleanup
FILE_RETENTION_HOURS=24

# Number of worker processes (Railway: use 1-2 to stay in free tier)
WORKER_COUNT=1

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Set this in Vercel dashboard or frontend/.env.local

# Backend API URL (your Railway deployment URL)
NEXT_PUBLIC_API_URL=https://your-backend.up.railway.app

# ============================================
# OPTIONAL: DEEPGRAM (Alternative STT)
# ============================================
# Only if you prefer Deepgram over AssemblyAI
# Get from: https://console.deepgram.com/

# DEEPGRAM_API_KEY=your_deepgram_key

# ============================================
# OPTIONAL: REDIS (For job queues in production)
# ============================================
# Only needed if you scale beyond hobby tier

# REDIS_URL=redis://default:password@host:port

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Enable debug logging
DEBUG=false

# Skip transcription (use dummy captions for testing)
MOCK_TRANSCRIPTION=false
